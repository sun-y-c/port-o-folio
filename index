  <script>
    // Section fade-in animation
    const sections = document.querySelectorAll('.animate');
    const revealOnScroll = () => {
      const triggerBottom = window.innerHeight * 0.85;
      sections.forEach(section => {
        const boxTop = section.getBoundingClientRect().top;
        if(boxTop < triggerBottom){ section.style.opacity='1'; section.style.transform='translateY(0)'; }
      });
    };
    window.addEventListener('scroll', revealOnScroll);
    revealOnScroll();

    // Animate super-border on scroll
    const borders = document.querySelectorAll('.super-border rect');
    window.addEventListener('scroll', () => {
      const scrollTop = window.scrollY;
      borders.forEach(rect => {
        rect.style.strokeDashoffset = scrollTop * 0.5;
      });
    });
  </script>
